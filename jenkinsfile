pipeline{
    agent any;
     tools{
       maven 'maven'
       jdk 'JDK11'
   }
    stages{
        stage('Fetch project from github'){
            steps{
                git branch: 'master', url: 'https://github.com/sujjadshaik/todo-app.git'
            }
                
        }
        stage('Maven package'){
            steps{
                sh 'mvn -f app/pom.xml package -Dmaven.test.skip=true'

            }
        }
        stage('sonar analysis'){
            steps{
                withSonarQubeEnv('sonarQube'){
                    sh 'mvn -f app/pom.xml sonar:sonar'
                }
            }
        }
        stage('deploy to artifactor'){
            steps{
                rtUpload (
            serverId: 'ARTIFACTORY-SERVER',
            spec: '''{
                 "files": [
                             {
                                "pattern": "app/target/*.war",
                                "target": "art-doc-dev-loc/todo-app/"
                            }
                        ]
            }''',
            )

            }
        }
         stage('Location'){
            steps{
                //sh 'cd artifacts'
                sh 'ls ~/var/lib/jenkins/workspace/test/todo-app/todo-app/artifacts'
            }
        }
        stage('download artifact'){
            steps{
                 rtDownload (
                 serverId: "ARTIFACTORY-SERVER",
                spec:"""{
                     "files": [
                                {
                                    "pattern": "art-doc-dev-loc/todo-app/",
                                    "target": "todo-app/artifacts"      
                                }
                            ]
              }"""
            )
            
            }
        }

        
        stage('Docker build'){
            steps{
                sh 'docker-compose up'
            }
        }

    }
}
